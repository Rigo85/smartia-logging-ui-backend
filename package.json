{
	"name": "smartia-logging-ui-backend",
	"version": "1.0.0",
	"description": "A pitiful and pathetic parody of the Papertrail website, shrouded in a veil of despair and futility, a reflection of a failed and desolate emulation, incapable of capturing the essence and brilliance of its glorious original.",
	"scripts": {
		"test": "jest",
		"start": "npm run serve",
		"antlr": "antlr4ts -o src/services/QueryRecognizer -visitor -listener QueryRecognizer.g4",
		"serve": "node dist/server.js",
		"debug": "nodemon --inspect-brk=0.0.0.0:9229 dist/server.js",
		"debug-2": "npm run build && npm run watch-debug",
		"watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
		"watch-node": "nodemon dist/server.js",
		"watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
		"watch-ts": "tsc -w",
		"serve-debug": "nodemon --inspect dist/server.js",
		"build": "npm run build-ts && npm run lint && npm run copy-static-assets",
		"copy-static-assets": "ts-node copyStaticAssets.ts",
		"build-ts": "tsc",
		"lint": "eslint -c .eslintrc.js --ext .ts src/**/*.ts",
		"lint-fix": "eslint --fix src/**/*.ts",
		"postinstall": "npm run build"
	},
	"keywords": [],
	"author": "Rigoberto L. Salgado Reyes <rlsalgado2006@gmail.com>",
	"license": "AGPL-3.0",
	"engines": {
		"node": "22.x"
	},
	"dependencies": {
		"@microsoft/recognizers-text-suite": "^1.3.1",
		"antlr4ts": "^0.5.0-alpha.4",
		"axios": "^1.7.9",
		"chalk": "^2.4.2",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"errorhandler": "^1.5.1",
		"express": "^4.18.2",
		"helmet": "^7.1.0",
		"lusca": "^1.7.0",
		"module-alias": "^2.2.3",
		"ws": "^8.15.1"
	},
	"devDependencies": {
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.16",
		"@types/errorhandler": "^1.5.3",
		"@types/express": "^4.17.19",
		"@types/lusca": "^1.7.4",
		"@types/node": "^20.8.5",
		"@types/pg": "^8.10.9",
		"@types/shelljs": "^0.8.15",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/eslint-plugin-tslint": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"concurrently": "^8.2.2",
		"eslint": "^8.51.0",
		"eslint-plugin-jsdoc": "^46.8.2",
		"eslint-plugin-no-null": "^1.0.2",
		"jest": "^29.7.0",
		"nodemon": "^3.0.1",
		"shelljs": "^0.8.5",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	}
}
